      <value>identity</value>
    </property>
-->

    <property>
      <name>hbase.ipc.client.connection.minIdleTimeBeforeClose</name>
      <value>120000</value>
    </property>

<!--
    <property>
      <name>hbase.rpc.client.impl</name>
      <value>org.apache.hadoop.hbase.ipc.AsyncRpcClient</value>
    </property>
-->

    <property>
      <name>hbase.hstore.flusher.count</name>
      <value>2</value>
    </property>

    <property>
      <name>hbase.wal.grouping.strategy</name>
      <value>boundedRegionGroup</value>
    </property>

    <property>
      <name>hbase.wal.provider</name>
      <value>multiwal</value>
    </property>

    <property>
      <name>hbase.wal.regiongrouping.numgroups</name>
      <value>4</value>
    </property>

    <property>
      <name>hbase.lease.recovery.first.pause</name>
      <value>100</value>
    </property>

    <property>
      <name>hbase.lease.recovery.pause</name>
      <value>100</value>
    </property>

    <property>
      <name>hbase.region.server.scan.heartbeat</name>
      <value>true</value>
    </property>

    <property>
      <name>hbase.master.distributed.log.regiongroupsplit</name>
      <value>false</value>
    </property>

    <property>
      <name>hbase.regionserver.bad.handler.count</name>
      <value>25</value>
    </property>

</configuration>
