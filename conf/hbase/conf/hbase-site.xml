<configuration>

  <property> 
    <name>hbase.rootdir</name> 
    <value>hdfs://localhost:9000/hbase1.1</value> 
  </property>

  <property>  
    <name>hbase.cluster.distributed</name>  
    <value>true</value>  
  </property>  

  <property> 
    <name>dfs.replication</name> 
    <value>1</value> 
  </property>

  <property>
    <name>zookeeper.session.timeout</name>
    <value>180000</value>
  </property>

